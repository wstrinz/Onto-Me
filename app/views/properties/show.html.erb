<%- model_class = Property -%>
<div class="page-header">
  <h1><%=t '.title', :default => @property.fullname %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>ID:</strong></dt>
  <dd><%= @property.name %></dd>
  <dt><strong>Label: </strong></dt>
  <dd><%= @property.predicate('rdfs:label') %></dd>
  <dt><strong>Description: </strong></dt>
  <dd><%= @property.predicate('rdfs:description') %></dd>
  <br><br>
  <dt><strong><%= model_class.human_attribute_name(:rdf) %>:</strong></dt>
  <dd><pre><%= @property.abbreviate %></pre></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              properties_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_property_path(@property), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              property_path(@property),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
